{
    "manifest_version": 3,
    "name": "SEO Analyzer",
    "version": "1.0.0",
    "description": "Analyzes the current page's SEO elements and provides a simple score.",
    "action": {
        "default_title": "SEO Analyzer",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "permissions": ["activeTab", "tabs"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ]
}
